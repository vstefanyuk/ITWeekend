<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="root" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="276.0"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2"
            fx:controller="com.softserve.itw2013.javafx.terminal.admin.controller.LogonController">
    <bottom>
        <HBox alignment="TOP_RIGHT" prefHeight="-1.0" prefWidth="-1.0" spacing="10.0">
            <children>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#onOK" prefWidth="80.0" text="OK">
                    <font>
                        <Font name="Tahoma" size="16.0" fx:id="x1"/>
                    </font>
                </Button>
                <Button cancelButton="true" font="$x1" mnemonicParsing="false" onAction="#onCancel" prefWidth="80.0"
                        text="Cancel"/>
            </children>
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
        </HBox>
    </bottom>
    <center>
        <GridPane>
            <children>
                <Label text="Login" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="txfLogin" prefWidth="-1.0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <PasswordField fx:id="pwfPassword" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="199.0" minWidth="10.0" prefWidth="60.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="314.0" minWidth="10.0" prefWidth="196.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>
